<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/eventImage2"
            android:layout_width="380dp"
            android:layout_height="210dp"
            app:srcCompat="@drawable/ic_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/newsTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE LEGEND ZELDA  SAYS: HEY GUYS "
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <TextView
                android:id="@+id/newsDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="The Legend of Zelda ( ou simplement Zelda, est une série de jeux vidéo d'action-aventure produite par la société japonaise Nintendo et créée par Shig "
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"/>


        </LinearLayout>
        <TextView
            android:id="@+id/string2"
            android:layout_width="146dp"
            android:layout_height="56dp"
            android:layout_marginStart="248dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onTextViewClick"
            android:padding="16dp"
            android:text="Show more"
            android:textColor="#f90043"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.946"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</androidx.cardview.widget.CardView>